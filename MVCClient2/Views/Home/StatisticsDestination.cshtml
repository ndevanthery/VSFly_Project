@model MVCClient2.Models.DestStatVM

@{
    ViewData["Title"] = "Statistics";
}

<h1>Statistics for this flight </h1>


<p><b>total recipy :</b> @Model.myStat.TotalPrice CHF</p>
<p><b>number of tickets :</b> @Model.myStat.TicketsBought pieces</p>
<p><b>average price :</b> @Model.myStat.AveragePrice CHF</p>
@{
    if (Model.myBookings.Count() == 0)
    {
        <h1>NO RESERVATIONS TO DISPLAY</h1>
    }
    else
    {


    <table class="table">
        <thead>
            <tr>
                <th>
                    FLIGHT ID
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    PRICE
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.myBookings)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellPrice)
                    </td>


                </tr>

            }

        </tbody>
    </table>
        }
    }

<div>
    <a asp-action="Index">Go back to list</a>
</div>
